# =============================================
# BRACE AUDIT - ENVIRONMENT CONFIGURATION
# =============================================

# Anthropic API Key (required for audit analysis)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model configuration
ANTHROPIC_MODEL=claude-sonnet-4-20250514
MAX_TOKENS=4096

# Cost limits (safety)
MAX_COST_PER_AUDIT=20.00

# =============================================
# STRIPE PAYMENTS
# =============================================
# Get these from https://dashboard.stripe.com/apikeys

STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# =============================================
# APP CONFIGURATION
# =============================================

# Your deployed app URL (for Stripe redirects)
APP_BASE_URL=http://localhost:8501

# Audit Portal URL (Streamlit app)
AUDIT_PORTAL_URL=http://localhost:8501

# =============================================
# DIRECTORIES
# =============================================
OUTPUT_DIR=./output
DATA_DIR=./data
TEMP_DIR=./temp

# =============================================
# DEVELOPMENT
# =============================================
# Set to "true" to bypass payment for testing
BYPASS_PAYMENT=true
